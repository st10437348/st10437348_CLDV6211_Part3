@model EventBookSyst.Models.Booking
@{
	ViewData["Title"] = "Booking Date";
}
<h2>Booking Date</h2>
<form asp-action="BookingDate" method="post">
	<input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="BookingDate" class="control-label">Date of Booking</label>
                <input asp-for="BookingDate" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>